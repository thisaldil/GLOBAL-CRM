{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/cron/send-holiday-emails",
      "dest": "/api/cron/send-holiday-emails.js",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/server.js",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/send-holiday-emails",
      "schedule": "0 5 * * *"
    }
  ]
}
